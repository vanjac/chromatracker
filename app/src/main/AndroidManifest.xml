<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vantjac.chromatracker">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".SamplePropertiesActivity"
            android:label="@string/title_activity_sample_properties"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".InstrumentPropertiesActivity"
            android:label="@string/title_activity_instrument_properties"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".SongPropertiesActivity"
            android:label="@string/title_activity_song_properties"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>